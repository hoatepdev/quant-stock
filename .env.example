# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vietnam_quant
DB_USER=postgres
DB_PASSWORD=your_password_here
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# API Keys (Optional - only needed if using SSI or DNSE as data source)
SSI_API_KEY=your_ssi_api_key_here
SSI_SECRET_KEY=your_ssi_secret_key_here
DNSE_API_KEY=your_dnse_api_key_here
DNSE_SECRET_KEY=your_dnse_secret_key_here

# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Rate Limiting
SSI_RATE_LIMIT_REQUESTS=100
SSI_RATE_LIMIT_PERIOD=60
API_RATE_LIMIT_REQUESTS=1000
API_RATE_LIMIT_PERIOD=60

# Data Configuration
DATA_SOURCE=vnstock
BACKFILL_START_DATE=2020-01-01
BACKFILL_BATCH_SIZE=10
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=2

# Cache Configuration
CACHE_TTL_SECONDS=300
PRICE_DATA_CACHE_TTL=3600
FACTOR_CACHE_TTL=1800

# Market Configuration
VIETNAM_EXCHANGES=HOSE,HNX,UPCOM
DEFAULT_EXCHANGE=HOSE
TRADING_HOURS_START=09:00
TRADING_HOURS_END=15:00

# Security
API_SECRET_KEY=your_secret_key_for_jwt_here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
